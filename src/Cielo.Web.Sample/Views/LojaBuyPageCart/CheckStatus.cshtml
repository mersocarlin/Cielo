@model dynamic
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Confirmation page <small>transaction completed</small></h1>
        </div>
        <h2>@ViewBag.Status</h2>

        <div class="row">
            <div class="span3">
                <a href="@Url.Action("CheckStatus", "LojaBuyPageCart")" class="btn btn-primary" type="submit">
                    Refresh page
                </a>
            </div>
            <div class="span3">
                <a href="@Url.Action("CancelOrder", "LojaBuyPageCart")" class="btn btn-danger" type="submit">
                    Cancel Order
                </a>
            </div>
        </div>
    </div>
</body>
</html>
